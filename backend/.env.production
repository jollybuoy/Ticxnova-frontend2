# Production Environment Variables for Ticxnova Backend

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (Azure SQL)
DB_SERVER=your-azure-sql-server.database.windows.net
DB_DATABASE=ticxnova
DB_USER=your-username
DB_PASSWORD=your-password
DB_PORT=1433

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-production
JWT_EXPIRES_IN=24h

# Frontend URL for CORS
FRONTEND_URL=https://ticxnova.com

# Socket.IO Configuration
SOCKET_IO_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Azure Storage (for file uploads)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Microsoft Graph API (for integration)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# Logging
LOG_LEVEL=info